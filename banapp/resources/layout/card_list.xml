<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/tvLvCurrency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="@string/currency"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvLvBalance" />

    <TextView
        android:id="@+id/tvLvBankName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="116dp"
        android:layout_marginTop="16dp"
        android:text="@string/bank_name_"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvLvCardNumber"
        android:layout_width="312dp"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="64dp"
        android:text="@string/card_number_lv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvLvBankName" />

    <TextView
        android:id="@+id/tvLvCVV"
        android:layout_width="44dp"
        android:layout_height="18dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="@string/cvv_lv"
        app:layout_constraintStart_toEndOf="@+id/tvCVV"
        app:layout_constraintTop_toBottomOf="@+id/tvLvCardNumber" />

    <TextView
        android:id="@+id/tvLvBalance"
        android:layout_width="44dp"
        android:layout_height="18dp"
        android:layout_marginBottom="5dp"
        android:text="@string/balance_lv"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvBalance" />

    <TextView
        android:id="@+id/tvLvMth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="@string/mth_lv"
        app:layout_constraintStart_toEndOf="@+id/tvLvEXP"
        app:layout_constraintTop_toTopOf="@+id/tvLvEXP" />

    <TextView
        android:id="@+id/tvsign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/sign"
        app:layout_constraintStart_toEndOf="@+id/tvLvMth"
        app:layout_constraintTop_toTopOf="@+id/tvLvMth" />

    <TextView
        android:id="@+id/tvLvYr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="172dp"
        android:layout_marginBottom="5dp"
        android:text="@string/yr_lv"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.15"
        app:layout_constraintStart_toEndOf="@+id/tvsign"
        app:layout_constraintTop_toTopOf="@+id/tvsign"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/tvLvEXP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="@string/exp_date"
        android:textColor="@color/design_default_color_primary"
        app:layout_constraintStart_toStartOf="@+id/tvLvCardNumber"
        app:layout_constraintTop_toBottomOf="@+id/tvCVV" />

    <TextView
        android:id="@+id/tvBalance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="80dp"
        android:layout_marginBottom="5dp"
        android:text="@string/balance"
        android:textColor="@color/design_default_color_primary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvLvYr" />

    <TextView
        android:id="@+id/tvCVV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="73dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:text="@string/cvv_txt"
        android:textColor="@color/design_default_color_primary"
        app:layout_constraintEnd_toStartOf="@+id/tvLvCVV"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvLvCardNumber" />

    <TextView
        android:id="@+id/tvBank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="5dp"
        android:text="@string/bank"
        android:textColor="@color/design_default_color_primary"

        app:layout_constraintEnd_toStartOf="@+id/tvLvBankName"
        app:layout_constraintHorizontal_bias="0.847"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>